@{
    ViewBag.Title = "Vehicle status";
    var recordCount = Model.Count;
    var records = Model;
}
<h2>@ViewBag.Title</h2>

<p>There are @recordCount Records.</p>

<hr />

<form>
    <label>Search by Customer ID:</label>
    <textarea name="CustomerIDSearchField"></textarea>
    <label>Search by Status:</label>
    <textarea name="StatusSearchField"></textarea>
    <input type="submit" />
</form>

<hr />

<table cellspacing="5" cellpadding="20" border="1">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Address</th>
        <th>Vehicle Id</th>
        <th>Registration Number</th>
        <th>Status</th>
    </tr>
    @foreach (IVehicleQueryDTO row in records)
    {
        <tr>
            <td>@row.CustomerId</td>
            <td>@row.CustomerName</td>
            <td>@row.CustomerAddress</td>
            <td>@row.VehicleId</td>
            <td>@row.RegistrationNumber</td>
            <td>@row.Status</td>
        </tr>
    }
</table>


